#Adjective (4)
def adj(Stem,lf,classe,cat,tc-type,tc-relation) {
   word Stem:ADJ_family (classe, pred=lf){
     Stem  : neutral cat tc-type tc-relation;
   }
}
family ADJ_family{
    entry: adj <5> [X] :X(*);
}
